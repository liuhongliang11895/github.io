<body>
<div class="container">
    <h1>Start Flexible Online Tasks from Home</h1>
    <p>Join our platform to complete simple online tasks. Experience new ways to work from home safely and easily.</p>
    
    <form id="taskForm">
        <input type="text" id="name" placeholder="Your Name" required>
        <input type="email" id="email" placeholder="Your Email" required>
        <button type="submit">Submit & Continue</button>
    </form>
    
    <div class="thank-you" id="thankYou">
        <h2>Thank you!</h2>
        <p>Click the button below to continue to the next step.</p>
        <button id="continueBtn">Continue</button>
    </div>
</div>

<script>
    const form = document.getElementById('taskForm');
    const thankYou = document.getElementById('thankYou');
    const continueBtn = document.getElementById('continueBtn');

    // 默认短链
    let shortLink = 'https://wa.me/默认短链';

    // 动态读取 JSON 短链
    fetch('shortlink.json')
    .then(response => response.json())
    .then(data => { shortLink = data.whatsappLink; })
    .catch(err => console.log('无法读取短链，使用默认值', err));

    // 表单提交
    form.addEventListener('submit', function(e){
        e.preventDefault();
        // 可在此发送用户数据到你的服务器或表单服务
        form.style.display = 'none';
        thankYou.style.display = 'block';
    });

    // 点击继续按钮跳转 WhatsApp
    continueBtn.addEventListener('click', function(){
        window.location.href = shortLink;
    });
</script>
</body>
